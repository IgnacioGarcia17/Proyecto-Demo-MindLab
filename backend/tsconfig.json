{
    "compilerOptions": {
        "allowJs": false,                           // Deshabilitamos JavaScript
        "target": "ES6",
        "module": "commonjs",                       
        "esModuleInterop": true,                    
        "outDir": "./dist",                         
        "rootDir": "./src",                         // Especifica la carpeta donde est√°n los archivos fuente en TypeScript
        "strict": true,                             // Habilita todas las comprobaciones estrictas de TypeScript
        "skipLibCheck": true,                       
        "forceConsistentCasingInFileNames": true    
    },
    "include": ["src/**/*"],                        // Incluye todos los archivos dentro de la carpeta "src"
    "exclude": ["node_modules"]                     // Excluye la carpeta "node_modules"
}
